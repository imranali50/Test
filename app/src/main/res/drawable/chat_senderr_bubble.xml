<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Shadow Layer-->


    <item android:left="@dimen/_10sdp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_15sdp" />
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px" />
            <solid android:color="#01000000" />
        </shape>
    </item>

    <!--===============-->


    <item android:left="@dimen/_10sdp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_15sdp" />
            <padding android:bottom="1px" />
            <solid android:color="#09000000" />
        </shape>
    </item>

    <!--===============-->


    <item android:left="@dimen/_10sdp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_15sdp" />
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px" />
            <solid android:color="#10000000" />
        </shape>
    </item>

    <!--===============-->


    <!--ForeGround-->


    <item android:left="@dimen/_5sdp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bottom_nav_bg" />
            <corners
                android:bottomLeftRadius="0dp"
                android:radius="@dimen/_15sdp" />
        </shape>
    </item>

</layer-list>