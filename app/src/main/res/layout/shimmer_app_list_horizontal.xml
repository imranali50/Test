<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:layout_constraintEnd_toStartOf="@+id/cl2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46sdp"
            android:src="@drawable/low_corner"
            app:tint="@color/shimmerColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/low_corner"
            android:backgroundTint="@color/shimmerColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/user_icon"
            app:layout_constraintStart_toStartOf="@+id/user_icon"
            app:layout_constraintTop_toBottomOf="@+id/user_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl2"
        android:layout_width="0dp"

        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/cl3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cl1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/user_icon2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46sdp"
            android:src="@drawable/low_corner"
            app:tint="@color/shimmerColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_name2"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/low_corner"
            android:backgroundTint="@color/shimmerColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/user_icon2"
            app:layout_constraintStart_toStartOf="@+id/user_icon2"
            app:layout_constraintTop_toBottomOf="@+id/user_icon2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="@dimen/_5sdp"
        app:layout_constraintEnd_toStartOf="@+id/cl4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cl2"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/user_icon3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46sdp"
            android:src="@drawable/low_corner"
            app:tint="@color/shimmerColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/low_corner"
            android:backgroundTint="@color/shimmerColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/user_icon3"
            app:layout_constraintStart_toStartOf="@+id/user_icon3"
            app:layout_constraintTop_toBottomOf="@+id/user_icon3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl4"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cl3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/user_icon4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46sdp"
            android:src="@drawable/low_corner"
            app:tint="@color/shimmerColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_name4"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/low_corner"
            android:backgroundTint="@color/shimmerColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/user_icon4"
            app:layout_constraintStart_toStartOf="@+id/user_icon4"
            app:layout_constraintTop_toBottomOf="@+id/user_icon4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>